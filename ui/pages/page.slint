import { Switch, GridBox, ListView, ScrollView, VerticalBox } from "std-widgets.slint";

//import { GallerySettings } from "../gallery_settings.slint";

export component Page inherits VerticalBox {
    in property<string> title: "default title";
    in property<string> description: "default description";
    in property<bool> show-enable-switch: false;

    HorizontalLayout {
        height: 24px;

        alignment: center;
        
        Text {
            font-size: 20px;
            text <=> root.title;

        }

        // Spacer
        Rectangle {}

        if show-enable-switch: Switch {
            horizontal-stretch: 0;
            //text: @tr("Widgets enabled");
            //checked <=> GallerySettings.widgets-enabled;
            text: "Widgets enabled";
            enabled: true;
        }
    }

    @children
}